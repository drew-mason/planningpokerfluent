{
  "name": "msm-planning-poker",
  "version": "1.0.0",
  "description": "MSM Planning Poker - Collaborative estimation for agile teams",
  "license": "UNLICENSED",
  "scripts": {
    "build:css": "tailwindcss -i ./src/client/tailwind.css -o ./src/client/generated-tailwind.css --minify",
    "build:app": "now-sdk build",
    "build": "npm run build:css && npm run build:app",
    "deploy": "now-sdk install",
    "transform": "now-sdk transform",
    "types": "now-sdk dependencies",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:errors-only": "eslint src/ --ext .js,.jsx,.ts,.tsx --quiet",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "check-all": "npm run lint:errors-only && npm run build",
    "pre-commit-check": "npm run check-all"
  },
  "devDependencies": {
    "@servicenow/eslint-plugin-sdk-app-plugin": "4.0.2",
    "@servicenow/glide": "26.0.1",
    "@servicenow/isomorphic-rollup": "^1.2.1",
    "@servicenow/sdk": "4.0.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/react": "19.x",
    "@types/react-dom": "19.x",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.21",
    "eslint": "8.50.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.5.6",
    "react": "19.x",
    "react-dom": "19.x",
    "tailwindcss": "^3.4.18",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.6",
    "claude": "^0.1.2",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.552.0",
    "react-hot-toast": "^2.6.0",
    "zustand": "^5.0.8"
  }
}
